<div class="settings-page">
    <h2>Settings</h2>

    <div class="card-panel">
        <paper-button class="save-queue blue darken-1 text-white" raised>
            <iron-icon icon="icons:save"></iron-icon>
            Save Queue
        </paper-button>
        <paper-button class="clear-queue red text-white" raised>
            <iron-icon icon="icons:delete"></iron-icon>
            Clear Queue
        </paper-button>
        <paper-button class="reboot-pi red text-white" raised>
            <iron-icon icon="av:replay"></iron-icon>
            Reboot Pi
        </paper-button>
    </div>

    <div class="card">
        <h2>Spotify Accounts</h2>

        <div class="row">
            <div class="input-field col s12">
                <select id="accounts"></select>
                <label for="accounts">Switch Account</label>
            </div>
        </div>

        <h2>Add Spotify Account</h2>

        <div class="row">
            <form class="col s12 add-auth-file">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="name" type="text" class="validate">
                        <label for="name">Friendly Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input id="username" type="text" class="validate">
                        <label for="username">Username</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="password" type="text" class="validate">
                        <label for="password">Password</label>
                    </div>
                </div>
                <div class="row">
                    <button class="right btn waves-effect waves-light" type="submit" name="action">Add
                        <i class="mdi-content-add right"></i>
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>