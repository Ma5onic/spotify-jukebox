<paper-material class="context-menu no-highlight">
    {{#each items}}
        {{#ifCond "text" type}}
            {{#if icon}}
                <paper-icon-item data-action="{{action}}" data-uri="{{uri}}">
                    <paper-ripple></paper-ripple>
                    <iron-icon item-icon icon="{{icon}}"></iron-icon>
                    {{text}}
                </paper-icon-item>
            {{else}}
                <paper-item data-action="{{action}}" data-uri="{{uri}}">
                    <paper-ripple></paper-ripple>
                    {{text}}
                </paper-item>
            {{/if}}
        {{/ifCond}}
        {{#ifCond "separator" type}}
            <paper-separator-item></paper-separator-item>
        {{/ifCond}}
    {{/each}}
</paper-material>