<div class="view-details">
    <div class="view-detail-top colorize">
        <div class="image-wrap">
            <img src="{{images.[0].url}}" class="detail-image"/>
        </div>

        <div class="detail-text">
            <h4>Artist</h4>

            <h3>{{name}}</h3>
        </div>
    </div>
    <h5>Popular Tracks</h5>

    <div class="track-table-wrap">
        <div class="track-table" data-uri="{{uri}}">
            {{> trackTableTop}}
            {{#each tracks}}
                {{> track}}
            {{/each}}
        </div>
    </div>
    <h5>Albums</h5>
    <ul class="pills">
        {{#each albums}}
            {{> albumPill}}
        {{/each}}
    </ul>
</div>